<div class="row">
    <div class="col-md-12">
        <h2>{{department.dataValues.departmentName}} - Department: {{department.dataValues.departmentId}}</h2>
        <hr />
        <form method="post" action="/departments/update">
            <fieldset>
                <div class="row">
                    <input class="form-control" id="departmentId" name="departmentId" type="hidden" value="{{department.dataValues.departmentId}}" />
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="departmentName">Department Name:</label>
                            <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{department.dataValues.departmentName}}" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
        </form>
    </div>
</div>